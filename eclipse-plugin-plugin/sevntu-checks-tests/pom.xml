            <version>5.4-SNAPSHOT</version>
            <type>test-jar</type>
            <scope>test</scope>
	</dependency>
  </dependencies>
 <build>
 <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <systemProperties>
            <property>
              <name>testinputs.dir</name>
              <value>${testinputs.dir}</value>
            </property>
