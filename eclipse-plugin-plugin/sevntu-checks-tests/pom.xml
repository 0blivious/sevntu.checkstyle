  <modelVersion>4.0.0</modelVersion>

  <groupId>com.github.sevntu</groupId>
  <artifactId>sevnti-checks-tests</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>sevntu-checks-tests</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <testinputs.dir>src/testinputs/com/github/sevntu/checkstyle</testinputs.dir>
